<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background_bubbles"
    tools:context="ClockActivity">

    <!-- Tytuł -->
    <TextView
        android:id="@+id/wakeup_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/montez"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="When did you go to sleep?"
        android:textAlignment="center"
        android:textColor="#BAD5F0"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Wyświetlenie wybranej godziny -->
    <TextView
        android:id="@+id/selectedTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/eczar_semibold"
        android:text="TIME: --:--"
        android:textColor="#BAD5F0"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wakeup_text" />

    <!-- Przycisk wyboru czasu -->

    <!-- Przycisk potwierdzenia -->

    <Button
        android:id="@+id/selectTimeButton"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/eczar_semibold"
        android:text="SELECT"
        android:textColor="#4D749C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectedTimeText" />

    <!-- Przycisk pominięcia -->
    <Button
        android:id="@+id/confirm_button_full"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/eczar_semibold"
        android:text="Confirm"
        android:textColor="#4D749C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectTimeButton" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/eczar_semibold"
        android:text="SKIP"
        android:textColor="#4D749C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_button_full" />

    <!-- Logo -->
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montez"
        android:text="SOT"
        android:textColor="#BAD5F0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skip_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
