<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background_bubbles"
    tools:context=".LoginActivity">

    <!-- TytuÅ‚ -->

    <TextView
        android:id="@+id/wakeup_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/montez"
        android:outlineProvider="background"
        android:text="When did you wake up?"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textAlignment="center"
        android:textColor="#BAD5F0"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:headerBackground="@drawable/rounded_button"
        android:headerTimeTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:numbersBackgroundColor="#D9FDFDFD"
        android:numbersInnerTextColor="#4D749C"
        android:numbersSelectorColor="#4D749C"
        android:timePickerMode="clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wakeup_text" />

    <Button
        android:id="@+id/confirm_button_full"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/eczar_semibold"
        android:text="Confirm"
        android:textColor="#4D749C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timePicker" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/eczar_semibold"
        android:text="SKIP"
        android:textColor="#4D749C"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/confirm_button_full"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montez"
        android:text="SOT"
        android:textColor="#BAD5F0"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/skip_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
